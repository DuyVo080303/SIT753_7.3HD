    <script>
        // Wait for the DOM to be fully loaded
        document.addEventListener('DOMContentLoaded', () => {
            'use strict'

            document.querySelectorAll('input[type="checkbox"]').forEach(function (checkbox) {
                checkbox.addEventListener('change', function () {
                    filterProducts();
                });
            });

            function filterProducts() {
                const selectedPriceFilters = Array.from(document.querySelectorAll('input[type="checkbox"][data-min]:checked'));
                const selectedMovieFilters = Array.from(document.querySelectorAll('input[type="checkbox"][data-movie]:checked'));

                document.querySelectorAll('.product-card').forEach(function (card) {
                    const price = parseFloat(card.getAttribute('data-price'));
                    const movie = card.getAttribute('data-movie');

                    let priceMatch = selectedPriceFilters.length === 0 || selectedPriceFilters.some(filter => {
                        const min = parseFloat(filter.getAttribute('data-min'));
                        const max = parseFloat(filter.getAttribute('data-max'));
                        return price >= min && price <= max;
                    });

                    let movieMatch = selectedMovieFilters.length === 0 || selectedMovieFilters.some(filter => {
                        return movie === filter.getAttribute('data-movie');
                    });

                    if (priceMatch && movieMatch) {
                        card.style.display = '';
                    } else {
                        card.style.display = 'none';
                    }
                });
            }
        });
    </script>

