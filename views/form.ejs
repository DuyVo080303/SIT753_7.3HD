    <main>
        <div class="container">
            <h3 class="mt-3">
                <%= title %>
            </h3>
            <P>
                The table below lists all the registered members of <strong>dKin Caps</strong> community.
                Accessing this data, stored in a persistant database, is peformed on the server.
            </P>

            <table class="table table-bordered">
                <tr>
                    <th>ID</th>
                    <th>Firstname</th>
                    <th>Surname</th>
                    <th>Email</th>
                    <th>Mobile#</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Zip</th>
                    <th>Comment</th>
                </tr>

                <% if (forms.length===0) { %>
                    <!-- If no forms found, show the "List is empty" message -->
                    <tr>
                        <td colspan="8" style="text-align:left;">List is empty</td>
                    </tr>
                    <% } else { %>
                        <!-- If forms exist, display each form in a table row -->
                        <% forms.forEach(form=> { %>
                            <tr>
                                <td>
                                    <%= form.id %>
                                </td>
                                <td>
                                    <%= form.fname %>
                                </td>
                                <td>
                                    <%= form.sname %>
                                </td>
                                <td>
                                    <%= form.email %>
                                </td>
                                <td>
                                    <%= form.mobile %>
                                </td>
                                <td>
                                    <%= form.ad %>
                                </td>
                                <td>
                                    <%= form.city %>
                                </td>
                                <td>
                                    <%= form.city %>
                                </td>
                                <td>
                                    <%= form.state %>
                                </td>
                                <td>
                                    <%= form.zip %>
                                </td>
                                <td>
                                    <%= form.comment %>
                                </td>
                            </tr>
                            <% }) %>
                                <% } %>
            </table>
        </div>
    </main>

